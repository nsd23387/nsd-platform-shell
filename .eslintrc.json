{
  "extends": ["next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Property[key.name='method'][value.value=/^(POST|PUT|PATCH|DELETE)$/i]",
        "message": "[READ-ONLY VIOLATION] Sales Engine UI is read-only. POST/PUT/PATCH/DELETE methods are not allowed. Use the read-only API functions."
      }
    ]
  },
  "overrides": [
    {
      "files": ["app/api/**/*.ts"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["app/sales-engine/lib/**/*.ts"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["app/sales-engine/campaigns/new/**/*.tsx"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["app/sales-engine/components/governance/**/*.tsx"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["app/sales-engine/components/PlanningOnlyToggle.tsx"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    }
  ]
}
